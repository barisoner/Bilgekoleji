@model IEnumerable<StudentLessonGrade>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th scope="col">No</th>
            <th scope="col">StudentLessonID</th>
            <th scope="col">Not Tipi</th>
            <th scope="col">Dönem</th>
            <th scope="col">Not</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.ID</th>
            <th scope="row">@item.StudentLessonID</th>
            <td>@item.Name</td>
            <td>@item.Period</td>
            <td>@item.Grade</td>
            <td>
                <a asp-action="Details" asp-controller="Grade" asp-route-id="@item.ID">
                    Güncelle
                </a>
            </td>
            <td>
                <a asp-action="Delete" asp-controller="Grade" asp-route-id="@item.ID" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                    Sil
                </a>
            </td>
        </tr>


        }
    </tbody>
</table>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a class="btn btn-primary me-md-2" type="button" asp-action="Create" asp-controller="Grade">Yeni Not Ekle</a>
</div>