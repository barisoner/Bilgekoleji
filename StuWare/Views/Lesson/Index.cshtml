@model IEnumerable<Lesson>
    <h2>Ders Listesi</h2>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">DersAdı</th>
            <th scope="col">Sınıf</th>
            <th scope="col">İncele</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.ID</th>
                <td>@item.Name</td>
                <td>@item.Class</td>

                <td>
                    <a asp-action="Details" asp-controller="Lesson" asp-route-id="@item.ID">
                        Güncelle
                    </a>
                </td>

                <td>
                    <a asp-action="Delete" asp-controller="Lesson" asp-route-id="@item.ID" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a class="btn btn-primary me-md-2" type="button" asp-action="Create" asp-controller="Lesson">Yeni Ders Ekle</a>
</div>
