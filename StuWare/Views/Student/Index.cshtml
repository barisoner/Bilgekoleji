@model IEnumerable<Student>

    <h2> Öğrenci Listesi </h2>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Önceki Okul</th>
            <th scope="col">Veli</th>
            <th scope="col">Veli Tel No.</th>
            <th scope="col">İncele</th>
            <th scope="col">Ders Ata</th>
            <th scope="col">Karne</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.ID</th>
            <td>@item.Name</td>
            <td>@item.LastName</td>
            <td>@item.LastSchool</td>
            <td>@item.GuardianName @item.GuardianLastName</td>
            <td>@item.GuardianCellPhone</td>

            <td>
                <a asp-action="Details" asp-controller="Student" asp-route-id="@item.ID">
                    Güncelle
                </a>
            </td>

            <td>
                <a asp-action="Index" asp-controller="StudentLesson" asp-route-id="@item.ID">
                    Ders Ata
                </a>
            </td>

            <td>
                <a asp-action="Index" asp-controller="Report" asp-route-id="@item.ID">
                    Karne
                </a>
            </td>

            <td>
                <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.ID" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                    Sil
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>


<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a class="btn btn-primary me-md-2" type="button" asp-action="Create" asp-controller="Student">Yeni Öğrenci Ekle</a>
</div>

