@model StudentLessonGrade

<div class="container">
    <h2>Güncelleme Ekranı</h2>

    <form asp-controller="Grade" asp-action="Details" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="ID" class="form-label">No</label>
            <input asp-for="ID" readonly="readonly" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="StudentLessonID" class="form-label">StudentLessonID</label>
            <input asp-for="StudentLessonID" readonly="readonly" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Not Adı</label>  <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Grade" class="form-label">Notu</label>  <span asp-validation-for="Grade" class="text-danger"></span>
            <input asp-for="Grade" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Period" class="form-label">Dönem</label>  <span asp-validation-for="Period" class="text-danger"></span>
            <input asp-for="Period" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>

    </form>

</div>
