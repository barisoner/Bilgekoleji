@model User

<div class="container">

    <h2> Not </h2>
    <br />

    <form asp-controller="User" asp-action="Create" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Username" class="form-label">Kullanıcı İsmi</label> <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="Username" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Parola</label> <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">E-Mail</label> <span asp-validation-for="Email" class="text-danger"></span>
            <input type="email" asp-for="Email" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>

    </form>

</div>

